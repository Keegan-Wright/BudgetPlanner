<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:BudgetPlanner.Controls">

    <Design.PreviewWith>
        <controls:CalenderMonthItem />
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:CalenderMonthItem}" TargetType="controls:CalenderMonthItem">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Theme="{StaticResource CardBorder}">
                        <Grid>
                            <ItemsControl ItemsSource="{TemplateBinding WeeksInMonth}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <controls:CalenderWeekItem WeekItems="{Binding }"></controls:CalenderWeekItem>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>