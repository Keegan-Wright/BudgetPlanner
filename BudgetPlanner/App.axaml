<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:BudgetPlanner"
             xmlns:converters="clr-namespace:BudgetPlanner.Converters;assembly=BudgetPlanner"
			 xmlns:semi="https://irihi.tech/semi"
			 x:Class="BudgetPlanner.App"
             RequestedThemeVariant="Default"
			 >
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>



    <Application.Styles>
		<semi:SemiTheme Locale="en-US" />
		<StyleInclude Source="avares://Semi.Avalonia.DataGrid/Index.axaml" />
		<StyleInclude Source="avares://Semi.Avalonia.TreeDataGrid/Index.axaml" />
		<StyleInclude Source="avares://Semi.Avalonia.ColorPicker/Index.axaml" />
		<StyleInclude Source="avares://BudgetPlanner/Resources/Styles/ControlStyles.axaml"/>
	</Application.Styles>


	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<MergeResourceInclude Source="/Resources/CustomControls.axaml"></MergeResourceInclude>
				<MergeResourceInclude Source="/Resources/Converters.axaml"></MergeResourceInclude>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>