<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BudgetPlanner.ViewModels;assembly=BudgetPlanner.ViewModels"
			 xmlns:controls="clr-namespace:BudgetPlanner.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BudgetPlanner.Views.ClassificationSettingsView"
             x:DataType="vm:ClassificationSettingsViewModel">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition  Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		
		<Button
			Grid.Row="0"
			HorizontalAlignment="Right"
			Margin="0 0 10 0"
			Command="{Binding NavigateToAddCustomClassificationCommand}">Add Classification</Button>

		<controls:CustomClassifications
			Grid.Row="1"
			Classifications="{Binding CustomClassifications}"
			DeleteCustomClassificationCommand="{Binding DeleteCustomClassificationAsync}"
			/>

	</Grid>

</UserControl>
