<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BudgetPlanner.Client.Controls">

  <!--
    Additional resources 
    Using Control Themes:
         https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
    Using Theme Variants:
         https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->
  
  <Design.PreviewWith>
    <StackPanel Width="400" Spacing="10">      
        <StackPanel Background="{DynamicResource SystemRegionBrush}">
          <controls:BudgetCategories />
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type controls:BudgetCategories}" TargetType="controls:BudgetCategories">
    <Setter Property="Template">
      <ControlTemplate>
		  <ScrollViewer AllowAutoHide="True">
			  <StackPanel Spacing="10">
				  <ItemsControl ItemsSource="{TemplateBinding Categories}">
					  <ItemsControl.ItemTemplate>
						  <DataTemplate>
							  <controls:BudgetCategory Category="{Binding }"/>
						  </DataTemplate>
					  </ItemsControl.ItemTemplate>


					  <ItemsControl.ItemsPanel>
						  <ItemsPanelTemplate>
							  <VirtualizingStackPanel/>
						  </ItemsPanelTemplate>
					  </ItemsControl.ItemsPanel>

				  </ItemsControl>
			  </StackPanel>
		  </ScrollViewer>
	  </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
