<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BudgetPlanner.Controls"
        xmlns:vm="clr-namespace:BudgetPlanner.ViewModels;assembly=BudgetPlanner.ViewModels"
		>

	<!--
    Additional resources 
    Using Control Themes:
         https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
    Using Theme Variants:
         https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->

	<Design.PreviewWith>
		<StackPanel Width="400" Spacing="10">
			<StackPanel Background="{DynamicResource SystemRegionBrush}">
				<controls:UpcomingPayment />
			</StackPanel>
		</StackPanel>
	</Design.PreviewWith>

	<ControlTheme x:Key="{x:Type controls:UpcomingPayment}" TargetType="controls:UpcomingPayment">
		<Setter Property="Template">
			<ControlTemplate>
				<StackPanel>
					<TextBlock Text="{Binding Payment.PaymentName, RelativeSource={RelativeSource TemplatedParent}}"/>
					<TextBlock Text="{Binding Payment.Amount, RelativeSource={RelativeSource TemplatedParent}}"/>
					<TextBlock Text="{Binding Payment.PaymentDate, RelativeSource={RelativeSource TemplatedParent}}"/>
				</StackPanel>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
