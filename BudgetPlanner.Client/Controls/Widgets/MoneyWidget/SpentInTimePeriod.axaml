<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BudgetPlanner.Client.Controls"
        xmlns:vm="clr-namespace:BudgetPlanner.Client.ViewModels;assembly=BudgetPlanner.Client.ViewModels"
		>

	<!--
    Additional resources 
    Using Control Themes:
         https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
    Using Theme Variants:
         https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->

	<Design.PreviewWith>
		<StackPanel Width="400" Spacing="10">
			<StackPanel Background="{DynamicResource SystemRegionBrush}">
				<controls:SpentInTimePeriod TotalIn="100" TotalOut="100" Normalised="100" Title="Spent this week"/>
				<controls:SpentInTimePeriod TotalIn="100" TotalOut="100" Normalised="100" Title="Spent this Month"/>
				<controls:SpentInTimePeriod TotalIn="100" TotalOut="100" Normalised="100" Title="Spent Today"/>
				<controls:SpentInTimePeriod TotalIn="100" TotalOut="100" Normalised="100" Title="Spent this year"/>
			</StackPanel>
		</StackPanel>
	</Design.PreviewWith>

	<ControlTheme x:Key="{x:Type controls:SpentInTimePeriod}" TargetType="controls:SpentInTimePeriod">
		<Setter Property="Template">
			<ControlTemplate>
				<Border Theme="{StaticResource CardBorder}">
					<Grid 
						RowSpacing="10"
						ColumnDefinitions="*,*,*"
						RowDefinitions="Auto,*">
						
						<TextBlock Grid.ColumnSpan="3"
						           Text="{TemplateBinding Title}" HorizontalAlignment="Center" Theme="{StaticResource TitleTextBlock}"></TextBlock>

						
						<controls:HeaderAndValueCard
							Grid.Row="1"
							Grid.Column="0"
							Text="{TemplateBinding TotalIn, Converter={StaticResource DecimalToCurrencyConverter}}"
							Title="Total In"
							Theme="{StaticResource Success}"
						></controls:HeaderAndValueCard>
						
						<controls:HeaderAndValueCard
							Grid.Row="1"
							Grid.Column="1"
							Text="{TemplateBinding TotalOut, Converter={StaticResource DecimalToCurrencyConverter}}}"
							Title="Total Out"
							Theme="{StaticResource Danger}"
						></controls:HeaderAndValueCard>
						
						<controls:HeaderAndValueCard
							Grid.Row="1"
							Grid.Column="2"
							Text="{TemplateBinding Normalised, Converter={StaticResource DecimalToCurrencyConverter}}}"
							Title="Difference"
							Theme="{StaticResource Warning}"
						></controls:HeaderAndValueCard>

					</Grid>
				</Border>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
